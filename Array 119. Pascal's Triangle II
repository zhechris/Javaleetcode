public class Solution {
    public List<Integer> getRow(int rowIndex) {
        List<Integer> list = new ArrayList<Integer>();
        list.add(1);
        for (int k = 1; k <= rowIndex; k++) {
            for (int i = k - 1; i >= 1; i--) {
                list.set(i, list.get(i) + list.get(i - 1));
            }
            list.add(1);
        }
        return list;
    }
}
//K=0为第一行，从开始到后来一层一层覆盖，a[1]=a[1]+a[0];
//注意，这个题目k是从0开始的。
1
1 1
1 2 1
1 3 3 1  (k=3)
